---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <div class="login-container">
    <div class="login">
      <div class="back">
        <img src="src/assets/back.svg" alt="back" class ="back-icon">
        <p>Back</p>
      </div>
      <form class="login-form">
        <label>
          <span>Username</span>
          <input type="text" name="username" autocomplete="off" class="username" required placeholder="input your username">
        </label>
        <label>
          <span>Password</span>
          <input type="password" name="password" placeholder="input your password"  class="password" required>
        </label>
        <button type="submit">Log In</button>
      </form>
    </div>
  </div>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
		const backBtn = document.querySelector('.back') as HTMLButtonElement;

			backBtn.addEventListener('click', () => {
				window.location.href = '/'; 
			});

      //login
    const loginForm = document.querySelector('.login-form')  as HTMLFormElement

    loginForm.addEventListener('submit', async (e) => {
      e.preventDefault()
      const loginFormData = new FormData(loginForm)
      const username = loginFormData.get('username')
      const password = loginFormData.get('password')

  console.log(JSON.stringify({ username, password })) 

  try {
    const response = await fetch(`http://localhost:3001/login`, {
        method: 'POST',
        headers: {
            "Content-Type": 'application/json',
        },
        body: JSON.stringify({
            "username": username,
            "password": password
        }),
        credentials: 'include'
    });

    if (response.ok) {
        const data = await response.json();
        console.log(data);

        window.location.href = '/home';
      } else {
        const errorData = await response.json();
        console.error('Login failed:', errorData);
        alert('Login failed: ' + errorData.message);
      }
      } catch (error) {
      console.error('Error:', error);
      alert('Something went wrong. Please try again later.');
      }
    })
	})

</script>
<style>
.login-container{
    display: flex;
		padding: 8px;
    margin:0 auto;
    align-items: center;
		justify-content: center;
    height:95vh;
    background-image: url('/src/assets/login.jpg');
		background-size: cover;
		background-position: center;
    font-family: "VT323", monospace;
    font-weight: bold;
	}

  .login-form {
    display: flex;
    flex-direction: column;
    gap: 15px; 
    padding:40px;
    padding-top:16px;
    width: 520px;
    border: 3px solid black;
    background-color: white;
  }

 label {
  display: flex;
  flex-direction: column;
	margin-bottom: 16px;
}

 span{
	margin-bottom: 8px;
  font-size: 1.2rem;
}

input{
	padding:16px;
  border: 3px solid black;
}

.login-form button{
	width:100%;
	background-color:#2c2c2c;
	color:white;
	border-radius: 10px;
  padding:10px;
  font-size:1.2rem;
  box-shadow:2px 2px 0 2px black;
}

.login-form button:hover{
  transform: translateY(4px);
  	box-shadow: none;
    background-color: white;
    color: black;
}

.back{
	display:flex;
  cursor: pointer;
}

.back p{
  font-size: 1.5rem;
  color: white;
  margin-bottom:0px;
}

.back-icon{
	width:30px;
